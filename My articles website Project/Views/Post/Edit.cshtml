@model My_articles_website_Project.Core_View.AuthorPostView
@inject MyArticlesWebsiteProjectData.IDataHelper<MyArticlesWebsiteProject.Core.Category> datahelper
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1 style="font-family: Cairo, sans-serif">Edit</h1>

<h4 style="font-family: Cairo, sans-serif">Author Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <input asp-for="UserID" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="UserName" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="FullName" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PostCategory" class="control-label"></label>
                <select asp-for="PostCategory" class="form-control" asp-items=" new SelectList(datahelper.GetAllData().Select(x => x.Name))"></select>  
                <span asp-validation-for="PostCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostTitle" class="control-label"></label>
                <input asp-for="PostTitle" class="form-control" />
                <span asp-validation-for="PostTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostDescription" class="control-label"></label>
                <textarea asp-for="PostDescription" class="form-control" ></textarea>
                <span asp-validation-for="PostDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostImageUrl" class="control-label"></label>
                <input asp-for="PostImageUrl" type="file" class="form-control" />
                <span asp-validation-for="PostImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="AddedDate" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="AuthorID" class="form-control" type="hidden" asp-items="ViewBag.AuthorID"></input>
            </div>
            <div class="form-group">
                <input asp-for="CategoryID" class="form-control" type="hidden" asp-items="ViewBag.CategoryID"></input>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
